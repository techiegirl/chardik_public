	      <%= f.input :title, :label => false, :input_html => {:value => "#{@post_result}",:rows => "1", :placeholder => "What's happening?", :class => "input-80", :id => "auto_post", data: {autocomplete_source: autocomplete_posts_path}}%>
          <%= f.submit "post", :class => "btn btn-info pull-right", :remote => true %>
          <%= f.input :anonymous, :label => "Anonymous"%>
	      <div id="auto_post_result"></div>
	    </div>
	    <% end %>
	</div><!--/input-->

