<%= render :partial => "shared/user_profile"-%>

<!--main content-->			
<div class="span6 posts_container">
  <% if current_user.unread_message_count != 0 %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <%= link_to user_messages_path(current_user) do %>
        You have <%= current_user.unread_message_count %> unread messages
      <% end %>
    </div>
  <% end %>

<!--input-->
	<div class="inputwrap clearfix">  
	    <%= simple_form_for @post_new, :url => callback_posts_path, :method => :get, :remote => true do |f| %>
