      <div class="info">(Field with asterisk are mandatory, but to get best result from the app please fill them up)</div>
      <fieldset>
        <div class="login-fields">
          <!--<div class="field">-->
            <!--<%#= f.input :first_name, :required => false, :autofocus => true,:input_html => {:class => "login username-field"} %>-->
